<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    android:background="@android:color/black">

    <!-- Ô số 1 - chiếm cả chiều rộng trên cùng -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FF0000"
        android:text="1"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:gravity="center"/>

    <!-- Hàng thứ 2 chứa Ô 2 và một LinearLayout khác -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <!-- Ô số 2 - Chiếm toàn bộ chiều cao bên trái -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFF00"
            android:text="2"
            android:textSize="24sp"
            android:textColor="#FF0000"
            android:gravity="center"/>

        <!-- Cột bên phải chứa Ô 3, 4, 5 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <!-- Ô số 3 - To nhất bên phải -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#0000FF"
                android:text="3"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:gravity="center"/>

            <!-- Hàng dưới chứa Ô 4 và Ô 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- Ô số 4 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FF99CC"
                    android:text="4"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <!-- Ô số 5 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#9966CC"
                    android:text="5"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
